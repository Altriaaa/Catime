#include <windows.h>
#include "resource.h"

// 设置 UTF-8 编码
#pragma code_page(65001)

// 通用输入对话框 - 用于设置倒计时时间
CLOCK_IDD_DIALOG1 DIALOGEX 0, 0, 200, 70
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "设置倒计时时间"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "格式: MM:SS 或 HH:MM:SS", CLOCK_IDC_STATIC, 10, 10, 180, 16
    EDITTEXT        CLOCK_IDC_EDIT, 10, 30, 180, 20, ES_AUTOHSCROLL | ES_MULTILINE
    PUSHBUTTON      "确定", CLOCK_IDC_BUTTON_OK, 140, 45, 50, 14
END

// 颜色值输入对话框
CLOCK_IDD_COLOR_DIALOG DIALOGEX 0, 0, 200, 100
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "设置颜色"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "输入颜色值 (支持HEX、RGB或颜色名):", CLOCK_IDC_STATIC, 10, 10, 180, 16
    EDITTEXT        IDC_COLOR_VALUE, 10, 30, 180, 20, ES_AUTOHSCROLL
    CONTROL         "", IDC_COLOR_PANEL, "Static", SS_WHITERECT | WS_BORDER, 10, 60, 50, 20
    PUSHBUTTON      "确定", IDOK, 85, 75, 50, 14
    PUSHBUTTON      "取消", IDCANCEL, 140, 75, 50, 14
END

// 启动时间设置对话框
IDD_STARTUP_TIME_DIALOG DIALOGEX 0, 0, 200, 90
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "设置启动时间"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "设置启动时的倒计时时间:", CLOCK_IDC_STATIC, 10, 10, 180, 16
    EDITTEXT        IDC_STARTUP_TIME, 10, 30, 180, 20, ES_AUTOHSCROLL
    LTEXT           "格式: MM:SS 或 HH:MM:SS", CLOCK_IDC_STATIC, 10, 55, 180, 16
    PUSHBUTTON      "确定", IDOK, 85, 70, 50, 14
    PUSHBUTTON      "取消", IDCANCEL, 140, 70, 50, 14
END 